<div class="container">

    <div class="row">
        <div class="col-12">

            <h1>Prova GET tramite JavaScript</h1>

            <div id="container_cards"></div>

        </div>
    </div>



</div>


<!--SEZIONE FINALE CON BACKGROUND CORONE-->
<div class="container-fluid ">
    <div class="row bg-crowns no-padding" style="height:500px">
            
    </div>
</div>




@section Scripts{

    axios.get("https://localhost:7283//api/PizzaApi/GetPizzas")
    .then((result) =>{
        const listPizzas = result.data;
        listPizzas.forEach(pizza => {
                        document.getElementById("container_cards").innerHTML += `
    <tr>
        <th scope="row">${pizza.id}</th>
        <td><img class="img-fluid img_square" width="100" height="100" src="${pizza.imgSource}" alt="Immagine ${pizza.name}"></td>
        <td>${pizza.name}</td>
        <td>${pizza.description}</td>
        <td>${pizza.price} €</td>
        <td>
            <a class="btn btn-sm" href="/Home/PizzaDetail">
                <span class="material-icons-outlined">
                    visibility
                </span>
            </a>
        </td>
    </tr>`;}
    
    







    
    })
    .catch((error) => {
		console.error("Errore!");
		console.log(error);
	)};
}







